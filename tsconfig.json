{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "rootDirs": [
      "src",
      "__tests__"
    ],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": [
        "../__tests__/*"
      ],
      "@/*": [
        "*"
      ]
    },
    "plugins": [
      {
        "name": "ts-auto-mock/ts-jest"
      }
    ]
  },
  "include": [
    "src",
    "__tests__"
  ],
  "exclude": []
}